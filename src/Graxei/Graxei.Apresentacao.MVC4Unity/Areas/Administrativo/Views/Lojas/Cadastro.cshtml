@using Graxei.Apresentacao.MVC4Unity.Areas.Administrativo.HtmlHelpers
@model LojaModel

@{
    <div class="form-group">
        @Html.Erro()
    </div>
    <div class="form-group">
        @Html.Sucesso()
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.LojaContrato.Nome)
        @Html.LabelFor(m => m.LojaContrato.Nome, new { @class = "control-label col-xs-1" })
        <div class="col-xs-5">
            @Html.TextBoxFor(m => m.LojaContrato.Nome, new { @class = "form-control", placeholder = "large-12.columns" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-1 col-xs-1">
            <button type="submit" class="btn btn-primary">@Rotulos.Salvar</button>
        </div>
    </div>
}
