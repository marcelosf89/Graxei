@model LojaModel
@{

    AjaxOptions ajax = new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "novaloja", HttpMethod = "POST" };
    using (Ajax.BeginForm("Nova", "Lojas", null, ajax, new { @class = "form-horizontal" }))
    {
    <div id="novaloja">
        @{ Html.RenderPartial("Cadastro", Model); }
        @{if (this.Model.LojaContrato != null && this.Model.LojaContrato.Id != 0)
          {
            <button type="button" data-toggle="modal" data-target="#modalEnderecos">@Rotulos.NovoEndereco</button>
          }
        }
    </div>
    }
}