@model LojaModel
@{
    ViewBag.Title = "Nova";
}
<div class="row">
    <div class="col-md-2">
        @if (Model.LojaContrato != null && this.Model.LojaContrato.Id != 0)
        {
            <div class="bg-panel-loja header-loja">
                <div class="bs-docs-sidebar hidden-print hidden-xs hidden-sm" role="complementary">
                    <ul class="nav bs-docs-sidenav">
                        <li>
                            @{
            AjaxOptions ajaxCadastro = new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "fm-content", HttpMethod = "POST", OnBegin = "openL();", OnComplete = "closeL();" };
                                @Ajax.ActionLink("Cadastro", "NovaLojaAjax", "Lojas", new { Controller = "Lojas", idLoja = Model.LojaContrato.Id }, ajaxCadastro)
                            }
                            @* <button id="btn-novo-endereco" type="button" class="col-lg-offset-1 btn btn-default" data-toggle="modal" data-target="#modalEnderecos" onclick="resetModal();">@Rotulos.NovoEndereco</button>
                                { Html.RenderPartial("ListaEnderecos", Model.ListaEnderecos); }   *@
                        </li>
                        <li>
                            @{
            AjaxOptions ajaxAdicionarLogo = new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "fm-content", HttpMethod = "POST", OnBegin = "openL();", OnComplete = "closeL();" };
                                @Ajax.ActionLink("Logo", "AdicionarLogo", "Lojas", new { Controller = "Lojas", idLoja = Model.LojaContrato.Id }, ajaxAdicionarLogo)
                            }
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>

    <div class="col-md-10">
        <div id="fm-content">
            @{Html.RenderPartial("NovaLojaAjax", Model);}
        </div>
    </div>
</div>
