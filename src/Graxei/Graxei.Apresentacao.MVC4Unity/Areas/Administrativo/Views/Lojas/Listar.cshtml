@using Graxei.Apresentacao.MVC4Unity.Areas.Administrativo.Infraestutura
@using Graxei.Transversais.ContratosDeDados
@model ListaLojas

@{
    ViewBag.Title = "Listar";
}

<h4>Listar</h4>
<div class="row">
    <div class="col-md-12">
           @Ajax.IconActionLink("glyphicon glyphicon-plus", Rotulos.NovaLoja, "EditarNova", "Lojas", new { Controller = "Lojas" }, new AjaxOptions() { UpdateTargetId = "myContent", HttpMethod = "POST", OnBegin = "openL();", OnComplete = "closeL();" }, new {  @class = "btn btn-default" })
        </div>
    </div>
<div class="row">
    <div class="col-md-12">
        <table class=" table table-hover table-bordered ">
            <thead>
                <tr>
                    <th>Nome Loja
                    </th>
                    <th>Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (ListaLojasContrato listaLojasContrato in Model.Lista)
                    {
                    <tr>
                        <td class="col-md-6 col-lg-9">
                            @listaLojasContrato.Nome
                        </td>
                        <td class="col-md-3 col-lg-3">
                            @Ajax.IconActionLink("glyphicon glyphicon-pencil", Rotulos.Editar, "Editar", "Lojas", new { Controller = "Lojas", idLoja = listaLojasContrato.Id }, new AjaxOptions() { UpdateTargetId = "myContent", HttpMethod = "GET", OnBegin = "openL();", OnComplete = "closeL();" }, new {  @class = "btn btn-default btn-sm" })
                        </td>
                    </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="2">
                        @using (Ajax.BeginForm("Listar", "Lojas", new { Controller = "Lojas", tamanho = 5 }, new AjaxOptions() { UpdateTargetId = "myContent", HttpMethod = "GET", OnBegin = "openL();", OnComplete = "closeL();" }, new { @class = "navbar-form navbar-left", role = "search" }))
                        {
                            @Html.LinkPaginacao2("numeroPagina", (int)ViewBag.Page, Model.Total.Total, 5);
                        }
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
