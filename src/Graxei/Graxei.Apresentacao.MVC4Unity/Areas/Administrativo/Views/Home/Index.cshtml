@{
    ViewBag.Title = "Graxei";
}
@Styles.Render("~/Content/bootstrap/base")
@Styles.Render("~/Content/themes/base/css")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/sc")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/modal")
@Scripts.Render("~/bundles/modernizr")

<script>
    $(document).ready(function () {
        $("#openMenu").on("click", function () {
            $("#menuAdmin").toggle();

            if ($("#openMenu").attr("estaAberto") === "true") {
                $("#openMenu").css("left", "0em");
            } else {
                $("#openMenu").css("left", "15em");
            }

            $("#openMenu").attr("estaAberto", $("#openMenu").attr("estaAberto") === "false")
        });
    });
</script>
<div class="navbar-wrapper">
    <div class="container">
        <div class="navbar navbar-inverse navbar-fixed-top " role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Ajax.ActionLink(" raxei", "Dashboard", "Home", new { controller = "Home" }, new AjaxOptions() { UpdateTargetId = "myContent" }, new { @class = "navbar-brand logo" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#about">Sobre</a></li>
                        <li><a href="#contact">Contato</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <form class="navbar-form navbar-left" role="search">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                                            @User.Identity.Name
                                            <span class="caret"></span>
                                            <span class="sr-only"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>@Html.ActionLink("Graxei", "Index", "Home", new { controller = "Home", area = "" }, new AjaxOptions())
                                            </li>
                                            <li class="divider"></li>
                                            <li>@Html.ActionLink("log off", "Sair", "Login", new { controller = "Login", area = "" }, new AjaxOptions())</li>
                                        </ul>
                                    </div>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@if (User.Identity.IsAuthenticated)
{
    <div id="openMenu" class="menu-button-open" estaaberto="false">
        <i class="glyphicon glyphicon-th-large"></i>
    </div>
    <div id="menuAdmin" class="menu-body">
        <ul>
            <li>@Ajax.IconActionLink("glyphicon glyphicon-tower", "Lojas", "Listar", "Lojas", new { controller = "Lojas", numeroPagina = 0, tamanho = 10 }, new AjaxOptions() { UpdateTargetId = "myContent" }, new { @class = "" })</li>
        </ul>
    </div>
}
<!-- Marketing messaging and featurettes
    ================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing container-body" id="myContent">
    @{Html.RenderAction("Dashboard");}

    <!-- FOOTER -->
    <footer>
        <p class="pull-right"><a href="#">Ir para o topo</a></p>
        <p>&copy; 2014 Graxei. &middot; <a href="#">Privacidade</a> &middot; <a href="#">Termos</a></p>
    </footer>
    <div id="myModal">
    </div>
</div>
<div id="msg-display"></div>
