@using Graxei.Apresentacao.MVC4Unity.Areas.Administrativo.HtmlHelpers
@model EnderecoModel
<div id="modalEnderecos" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-dialog-endereco">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body" id="model-endereco-body">
                <div class="form-group has-error">
                    <div class="col-lg-offset-1 col-lg-11">
                        @Html.Erro()
                    </div>
                </div>
                <div class="form-group has-success">
                    <div class="col-lg-offset-1 col-lg-11">
                        @Html.Sucesso()
                    </div>
                </div>
                @if (Model.IdLoja > 0)
                {
                    Html.RenderPartial("FormularioEndereco", Model);
                }
            </div>
        </div>
    </div>
</div>
@if (Model.IdLoja > 0)
{
    <script>
        $(document).ready(function () {
            $('#modalEnderecos').modal('show');
        });
    </script>
}
