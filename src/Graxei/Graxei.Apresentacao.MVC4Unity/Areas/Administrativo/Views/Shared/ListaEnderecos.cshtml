@using Graxei.Apresentacao.MVC4Unity.Areas.Administrativo.HtmlHelpers
@using Graxei.Transversais.ContratosDeDados
@model ListaEnderecoModel
@{
    ViewBag.Title = "Lista";
}
<div class="con-md-12">
    <div class="form-group has-error">
        <div class="col-lg-offset-1 col-lg-11">
            @Html.Erro()
        </div>
    </div>
    <div class="form-group has-success">
        <div class="col-lg-offset-1 col-lg-11">
            @Html.Sucesso()
        </div>
    </div>
    <div class="row row-btn-margin">
        <div class="con-md-12">
            @{
                AjaxOptions ajaxenderecos = new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "enderecoAtualizar", HttpMethod = "POST", OnBegin = "openL();", OnComplete = "closeL();" };
                AjaxOptions ajaxNovoEnderecos = new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "enderecoAtualizar", HttpMethod = "POST", OnBegin = "openL();", OnComplete = "closeL();" };

                if (Model.Enderecos.Count >= Model.QuantidadeEndereco)
                {
                <button class="btn btn-default disabled" data-toggle="tooltip" data-placement="bottom" title="O seu plano não permite a criação de mais um endereço. Peço que contrate um plano mais adequado para a sua loja"><i class="glyphicon glyphicon-plus"></i>@Rotulos.NovoEndereco</button>
                <div class="label label-warning" title="O seu plano não permite a criação de mais um endereço. Peço que contrate um plano mais adequado para a sua loja"><i class="glyphicon glyphicon-exclamation-sign"></i></div>
                }
                else
                {
                @Ajax.IconActionLink("glyphicon glyphicon-plus", Rotulos.NovoEndereco, "NovoEndereco", "Enderecos", new { Controller = "Enderecos", idloja = Model.IdLoja }, ajaxNovoEnderecos, new { @class = "btn btn-default" })
                }
            }
        </div>
    </div>
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="col-md-3">CNPJ</th>
                    <th class="col-md-7">@Rotulos.Enderecos</th>
                    <th class="col-md-2"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (EnderecoListaContrato enderecoListaModel in Model.Enderecos)
                {
                    <tr>
                        <td class="col-md-3">
                            @enderecoListaModel.Cnpj
                        </td>
                        <td class="col-md-7">
                            @enderecoListaModel.DescricaoEndereco
                        </td>
                        <td class="col-md-2 btn-group">
                            @{
                                @Ajax.ActionLink(Rotulos.Editar, "EditarEndereco", "Enderecos", new { Controller = "Enderecos", idEndereco = enderecoListaModel.IdEndereco }, ajaxenderecos, new { @class = "btn btn-default" })
                            }
                            <button class="btn btn-danger" onclick="excluirEndereco(@enderecoListaModel.IdEndereco, @Model.IdLoja);">@Rotulos.Excluir</button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<div id="enderecoAtualizar">
</div>
<script>
    function excluirEndereco(id, idLoja) {
        var value = confirm('Deseja realmente apagar o endereço?');
        if (!value) {
            return false;
        }
        openL();
        $.ajax({
            url: '@Url.Action("ExcluirEndereco", "Enderecos")',
            type: 'POST',
            data: { idEndereco: id, idLoja: idLoja },
            success: function (result) {
                $('#fm-content').html(result);
            },
            complete: function () { closeL(); }
        });
    }
</script>
