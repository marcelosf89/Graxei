@model EnderecoModel

@{
    AjaxOptions ajax = new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnSuccess = "SuccessEndereco" };
    using (Ajax.BeginForm("Salvar", "Enderecos", null, ajax, new { id = "form-enderecos", @class = "form-horizontal" }))
    {
    @Html.HiddenFor(m => m.IdLoja, new { id = "idlojaendereco" })
    @Html.HiddenFor(m => m.Id, new { id = "idHiddenEndereco" })
    <div id="validationEndereco"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.IdEstado, new { @class = "control-label col-xs-2 col-md-2 col-lg-2" })
        <div class="col-xs-5 col-md-5 col-lg-5">
            @Html.DropDownListFor(m => m.IdEstado, (IEnumerable<SelectListItem>)ViewBag.Estados, new { id = "IdEstado" })
            @Html.ValidationMessageFor(m => m.IdEstado)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Cidade, new { @class = "control-label col-xs-2 col-md-2 col-lg-2" })
        <div class="col-xs-5 col-md-5 col-lg-5">
            @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control typeahead", id = "IdCidade" })
            @Html.ValidationMessageFor(m => m.Cidade)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Bairro, new { @class = "control-label col-xs-2 col-md-2 col-lg-2" })
        <div class="col-xs-5 col-md-5 col-lg-5">
            @Html.TextBoxFor(m => m.Bairro, new { @class = "form-control", id = "IdBairro" })
            @Html.ValidationMessageFor(m => m.Bairro)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Logradouro, new { @class = "control-label col-xs-2 col-md-2 col-lg-2" })
        <div class="col-xs-9 col-md-9 col-lg-9">
            @Html.TextBoxFor(m => m.Logradouro, new { @class = "form-control", id = "IdLogradouro" })
            @Html.ValidationMessageFor(m => m.Logradouro)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Numero, new { @class = "control-label col-xs-2 col-md-2 col-lg-2" })
        <div class="col-xs-5 col-md-5 col-lg-5">
            @Html.TextBoxFor(m => m.Numero, new { @class = "form-control", id = "IdNumero" })
            @Html.ValidationMessageFor(m => m.Numero)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Complemento, new { @class = "control-label col-xs-2 col-md-2 col-lg-2" })
        <div class="col-xs-5 col-md-5 col-lg-5">
            @Html.TextBoxFor(m => m.Complemento, new { @class = "form-control", id = "IdComplemento" })
            @Html.ValidationMessageFor(m => m.Complemento)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telefones, new { @class = "control-label col-xs-2 col-md-2 col-lg-2" })
        <div class="col-xs-5 col-md-5 col-lg-5">
            @Html.TextBoxFor(m => m.Telefones, new { @class = "form-control", id = "IdTelefones" })
            @Html.ValidationMessageFor(m => m.Telefones)
        </div>
        <div class="col-xs-1 col-md-1">
            <span class="glyphicon glyphicon-info-sign"></span>
        </div>
        <div class="col-xs-5 col-md-5">
            <h4><span class="label label-info">@Textos.SepareTelefonesVirgula</span></h4>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-2">
            <button type="submit" class="btn btn-primary">@Rotulos.Salvar</button>
            @*<button class="btn btn-danger">@Rotulos.Cancelar</button>*@
        </div>
    </div>
    
    }
    
}

