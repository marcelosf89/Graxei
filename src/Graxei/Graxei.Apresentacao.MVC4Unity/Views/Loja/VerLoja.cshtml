@model Graxei.Modelo.Loja
<script src="~/Scripts/bootstrap-validation.js"></script>
<div class="modal fade" id="Modal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div id="dialogo" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <strong>@Model.Nome</strong>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                @foreach (Graxei.Modelo.Endereco endereco in Model.Enderecos)
                                {
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Logradouro</label><p>@endereco.Logradouro</p>
                                        </div>
                                    </div>  
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Complemento</label><p>@endereco.Complemento</p>
                                        </div>
                                    </div>  
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>Numero</label><p>@endereco.Numero</p>
                                        </div>
                                    </div>  
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>Cidade</label><p>@endereco.Bairro.Cidade.Nome</p>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Estado</label><p>@endereco.Bairro.Cidade.Estado.Sigla</p>
                                        </div>
                                        <div class="col-md-3">
                                            <label>Bairro</label><p>@endereco.Bairro.Nome</p>
                                        </div>
                                    </div>  
                                    <div class="row">
                                        <div class="col-md-3">
                                            @foreach (Graxei.Modelo.Telefone telefone in endereco.Telefones)
                                            {
                                                <br />
                                                @telefone.Numero
                                            }
                                        </div>
                                    </div>
                        
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Rotulos.Fechar</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#Modal2').modal('show');

    function loadPage(result) {
        if (result.url) {
            // if the server returned a JSON object containing an url 
            // property we redirect the browser to that url
            window.location.href = result.url;
        }
    }

</script>
