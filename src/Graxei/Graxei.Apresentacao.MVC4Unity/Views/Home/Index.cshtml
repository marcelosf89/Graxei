@{
    ViewBag.Title = "Index";
}
@model DateTime
@Styles.Render("~/Content/bootstrap/base")
@Styles.Render("~/Content/themes/base/css")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/modal")
@Scripts.Render("~/bundles/modernizr")

<script>
    $(document).ready(function () {
        $.getJSON("http://www.telize.com/geoip?callback=?",
            function (json) {
                $.ajax({
                    type: "POST",
                    url: "Home/SetRegionIP",
                    data: { pais: json.country, cidade: json.city, regiao: json.region_code }
                });
            }
        );
    });
</script>
<div class="navbar-wrapper">
    <div class="container">
        <div class="navbar navbar-inverse navbar-fixed-top " role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Graaaxei</a>
                </div>
                <div class="navbar-collapse collapse">
                    @using (Ajax.BeginForm("Pesquisar", "Home", new { Controller = "Home" }, new AjaxOptions() { UpdateTargetId = "myContent" }, new { @class = "navbar-form navbar-left", role = "search" }))
                    {	  
                        <div class="input-group nav-search">
                            @Html.TextBox("txtSearch", null, null, new { @class = "form-control ", placeholder = @Graxei.Transversais.Idiomas.Rotulos.Pesquisar })
                            <span class="input-group-btn">
                                <button class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                            </span>
                        </div>
                    }
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#about">Sobre</a></li>
                        <li><a href="#contact">Contato</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <form class="navbar-form navbar-left" role="search">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-warning">@User.Identity.Name</button>
                                        <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                                            <span class="caret"></span>
                                            <span class="sr-only"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>@Html.ActionLink("Administrador", "Index", "Home", new { controller = "Home", area="Administrativo" }, new AjaxOptions())
                                            </li>
                                            <li class="divider"></li>
                                            <li>@Html.ActionLink("log off", "Sair", "Login", new { controller = "Login" }, new AjaxOptions())</li>
                                        </ul>
                                    </div>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li>
                                <form class="navbar-form navbar-left" role="search">
                                    @Ajax.ActionLink("login", "Autenticacao", "Login", new { controller = "Login" }, new AjaxOptions() { UpdateTargetId = "myModal" }, new { @class = "btn btn-success" })
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

