@model Graxei.Modelo.Produto

@{
    ViewBag.Title = "Novo";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>
        <input type="submit" value="@Resources.Rotulos.CopiarProduto"/>
        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Fabricante.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Fabricante.Nome, new { data_autocomplete_url = Url.Action("Autocomplete") }))
        </div>
    </fieldset>
    <input type="submit" value="@Resources.Rotulos.Criar"/>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#Fabricante_Nome').autocomplete({
                source: '@Url.Action("AutoComplete")'
            });
        })


    </script>
}
