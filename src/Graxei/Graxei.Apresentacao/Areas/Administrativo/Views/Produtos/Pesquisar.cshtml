@model string 
<script>
    angular.bootstrap(document.getElementById('appPesquisa'), ['pesquisa-produtos']);
</script>
<div id="appPesquisa">
    <div ng-controller="PesquisarController as pesquisarCtrl" ng-init="pesquisarCtrl.init(@Model)">
        <div>
            <button class="btn btn-success invisible pull-right" ng-click="pesquisarCtrl.salvar()" ng-show="pesquisarCtrl.exibirBotoes">@Rotulos.Salvar</button>
        </div>
        <form name="form-produtos-vendedor">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th class="col-md-2 col-lg-2">@Rotulos.Codigo</th>
                        <th class="col-md-8 col-lg-8">@Rotulos.Descricao</th>
                        <th class="col-md-2 col-lg-2">@Rotulos.Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="prod in pesquisarCtrl.produtos.lista">
                        <td class="col-md-2 col-md-2">{{prod.codigo}}</td>
                        <td id="td-lista" class="col-md-8 col-md-8">
                            <div>
                                <button type="button" class="cancel btn btn-link" ng-click="pesquisarCtrl.habilitarEdicao(prod)">
                                    <img src="~/Content/imagens/editar.png" />
                                </button>
                                <label ng-click="pesquisarCtrl.habilitarEdicao(prod)" class="descricao-produto">{{prod.descricaoOriginal}}</label>
                            </div>
                            <div ng-show="prod.exibir">
                                <textarea class="form-control" ng-model="prod.minhaDescricao"></textarea>
                                <button type="button" class="btn btn-default" ng-click="pesquisarCtrl.confirmarEdicao(prod)">OK</button>
                                <button type="button" class="btn btn-default cancel" ng-click="pesquisarCtrl.cancelarEdicao(prod)">Cancelar</button>
                                <button type="button" class="btn btn-default cancel" ng-click="pesquisarCtrl.desfazerEdicao(prod)">Desfazer</button>
                            </div>
                        </td>
                        <td class="col-md-2 col-md-2">
                            <div class="input-group">
                                <span class="input-group-addon">R$</span>
                                <input style="text-align:right;" onkeyup="habilitarBotaoSalvar()" onchange='return validate(event);' data-thousands="." data-decimal="," value="{{prod.preco}}" class="form-control valor-produto"/>
                            </div>
                        </td>
                    </tr>
                </tbody>

                @*<tfoot>
                        <tr>
                            <th colspan="5">
                                @Ajax.LinkPaginacaoPesquisaProdutos(Model.Atual, Model.Total, 5)
                            </th>
                        </tr>
                    </tfoot>*@
            </table>
        </form>
    </div>
</div>